FROM golang:1.14.2-alpine3.11 as gobuilder

ARG GOOS=linux
ARG GOARCH=amd64
ARG CGO_ENABLED=0

ENV OPA_VERSION=0.19.1
RUN apk add --no-cache --update \
      bash \
      binutils \
      build-base \
      ca-certificates \
      curl

WORKDIR /opa-build

RUN curl "https://codeload.github.com/open-policy-agent/opa/tar.gz/v${OPA_VERSION}" | tar xvz --strip-components=1 && \
    go build && \
    strip --strip-all opa && \
    chmod 0755 opa

FROM alpine:3.11.5
LABEL maintainer="RÃ©mi REY <rrey94@gmail.com>"

COPY --from=gobuilder /opa-build/opa /usr/bin/opa
COPY Gemfile .

RUN apk add --no-cache --update \
      ruby && \
    apk add --no-cache --update --virtual build-dependencies \
      build-base \
      ruby-dev && \
    gem install bundler && \
    bundle config set no-cache true && \
    bundle install --jobs $(getconf _NPROCESSORS_ONLN) && \
    apk del build-dependencies

ENV TERRAGRUNT_VERSION=0.23.8
RUN wget -O /usr/bin/terragrunt \
      https://github.com/gruntwork-io/terragrunt/releases/download/v${TERRAGRUNT_VERSION}/terragrunt_linux_amd64 && \
    chmod 0755 /usr/bin/terragrunt

ENV TERRAFORM_VERSION=0.12.24
RUN wget https://releases.hashicorp.com/terraform/${TERRAFORM_VERSION}/terraform_${TERRAFORM_VERSION}_linux_amd64.zip && \
    unzip terraform_${TERRAFORM_VERSION}_linux_amd64.zip && \
    mv terraform /usr/bin/ && \
    rm terraform_${TERRAFORM_VERSION}_linux_amd64.zip && \
    chmod 0755 /usr/bin/terraform

ENV CONFTEST_VERSION=0.18.1
RUN wget -O - -o /dev/null https://github.com/instrumenta/conftest/releases/download/v${CONFTEST_VERSION}/conftest_${CONFTEST_VERSION}_Linux_x86_64.tar.gz | \
      tar xz conftest -C /usr/bin/ && \
    chmod 0755 /usr/bin/conftest
